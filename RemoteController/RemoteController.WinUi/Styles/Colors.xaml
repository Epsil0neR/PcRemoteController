<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="Brush.Error.Light" Color="#e57373" />
    <SolidColorBrush x:Key="Brush.Error.Main" Color="#f44336" />
    <SolidColorBrush x:Key="Brush.Error.Dark" Color="#d32f2f" />

    <SolidColorBrush x:Key="Brush.Warning.Light" Color="#ffb74d" />
    <SolidColorBrush x:Key="Brush.Warning.Main" Color="#ffa726" />
    <SolidColorBrush x:Key="Brush.Warning.Dark" Color="#f57c00" />

    <SolidColorBrush x:Key="Brush.Info.Light" Color="#4fc3f7" />
    <SolidColorBrush x:Key="Brush.Info.Main" Color="#29b6f6" />
    <SolidColorBrush x:Key="Brush.Info.Dark" Color="#0288d1" />

    <SolidColorBrush x:Key="Brush.Success.Light" Color="#81c784" />
    <SolidColorBrush x:Key="Brush.Success.Main" Color="#66bb6a" />
    <SolidColorBrush x:Key="Brush.Success.Dark" Color="#388e3c" />

</ResourceDictionary>

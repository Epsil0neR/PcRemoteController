<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:RemoteController.Converters">

    <c:DebugConverter x:Key="Converter.Debug"/>
    <c:DebugMultiConverter x:Key="Converter.DebugMulti"/>
    <c:InverseBooleanConverter x:Key="Converter.InverseBoolean" />
    <c:IsNotNullConverter x:Key="Converter.IsNotNull" />
    <c:IsNullConverter x:Key="Converter.IsNull" />
    <c:EqualsMultiValueConverter x:Key="Converter.EqualsMulti" />
    <c:EqualsValueConverter x:Key="Converter.Equals" />

    <c:BooleanToVisibility x:Key="Converter.BooleanToVisibility" />
    <c:BooleanToVisibility x:Key="Converter.BooleanToInvisibility" 
                           TrueVisibility="Collapsed"
                           FalseVisibility="Visible"
                           NullVisibility="Visible"/>

    <c:EnumToDescriptionConverter x:Key="Converter.EnumToDescription" />
</ResourceDictionary>